{
  "name": "web-eye-tracking-recorder",
  "version": "1.0.0",
  "description": "Web Eye Tracking Recorder - Browser-based screen recording and eye tracking library",
  "author": "shikibu9419",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "browser": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:core",
    "build:core": "bun build ./src/index.ts --outdir ./dist --target browser --format esm && bunx tsc --project tsconfig.json --emitDeclarationOnly --outDir ./dist",
    "build:react": "bun build ./src/react/index.ts --outdir ./dist/react --target browser --format esm && bunx tsc --emitDeclarationOnly --declaration --outDir ./dist/react ./src/react/index.ts",
    "dev": "bun --hot ./src/index.ts",
    "test": "vitest",
    "lint": "bunx @biomejs/biome lint src",
    "format": "bunx @biomejs/biome format src --write",
    "prepare": "npm run build",
    "prepublish": "npm run build",
    "prepublishOnly": "npm run build",
    "postinstall": "npm run build"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@biomejs/biome": "latest",
    "vite": "^6.0.7",
    "vitest": "^3.2.4",
    "happy-dom": "^18.0.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "keywords": ["eye-tracking", "screen-recording", "experiment", "research", "browser", "indexeddb"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Eye-Interaction-Design/web-eye-tracking-recorder.git"
  },
  "bugs": {
    "url": "https://github.com/Eye-Interaction-Design/web-eye-tracking-recorder/issues"
  },
  "homepage": "https://github.com/Eye-Interaction-Design/web-eye-tracking-recorder#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "fflate": "^0.8.2"
  }
}